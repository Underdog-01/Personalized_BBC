<!DOCTYPE package-info SYSTEM "http://www.simplemachines.org/xml/package-info">
<package-info xmlns="http://www.simplemachines.org/xml/package-info" xmlns:smf="http://www.simplemachines.org/">
	<id>underdog:PersonalizedBBC</id>
	<name>Personalized BBC</name>
	<version>1.2</version>
	<type>modification</type>

		<!-- ####################      SMF2.0X        #################### -->

	<install for="2.0 - 2.0.99">
		<readme parsebbc="true">SMF2/readme_PersonalizedBBC.txt</readme>
		<require-dir name="SMF2/Sources" destination="$boarddir" />
		<require-dir name="SMF2/Themes" destination="$boarddir" />
		<database>SMF2/PersonalizedBBC_mysql.php</database>
		<modification format="xml" type="file">personalizedBBC_install.xml</modification>
		<redirect url="$scripturl?action=admin;area=PersonalizedBBC;" timeout="5000">SMF2/redirect.txt</redirect>
	</install>

	<uninstall for="2.0 - 2.0.99">
		<readme parsebbc="true">SMF2/PersonalizedBBC_uninstall_readme.txt</readme>
		<code>SMF2/PersonalizedBBC_uninstall.php</code>
		<modification reverse="true">personalizedBBC_install.xml</modification>
		<remove-file name="$sourcedir/PersonalizedBBC.php" />
		<remove-file name="$sourcedir/PersonalizedBBCAdminSettings.php" />
		<remove-file name="$sourcedir/PersonalizedBBCAdmin.php" />
		<remove-file name="$themedir/PersonalizedBBC_Admin.template.php" />
		<remove-file name="$languagedir/PersonalizedBBC.english.php" />
		<remove-file name="$languagedir/PersonalizedBBC.english-utf8.php" />
		<remove-file name="$imagesdir/admin/PersonalizedBBC_settings.png" />
		<remove-file name="$imagesdir/admin/personalizedBBC-help.gif" />
		<remove-file name="$imagesdir/admin/personalizedBBC_add.png" />
		<remove-dir name="$imagesdir/bbc/personalizedBBC" />
	</uninstall>
</package-info>